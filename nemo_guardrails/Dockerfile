# ─────────────────────────────────────────────────────────────
# 1. Base image
# ─────────────────────────────────────────────────────────────
FROM python:3.10-slim

# ─────────────────────────────────────────────────────────────
# 2. Working directory
# ─────────────────────────────────────────────────────────────
WORKDIR /app

# ─────────────────────────────────────────────────────────────
# 3. System deps (for psutil, builds, etc.)
# ─────────────────────────────────────────────────────────────
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       build-essential \
       gcc \
       g++ \
    && rm -rf /var/lib/apt/lists/*

# ─────────────────────────────────────────────────────────────
# 4. Python dependencies
# ─────────────────────────────────────────────────────────────
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ─────────────────────────────────────────────────────────────
# 5. App code
# ─────────────────────────────────────────────────────────────
COPY . .

# ─────────────────────────────────────────────────────────────
# 6. Expose FastAPI port
# ─────────────────────────────────────────────────────────────
EXPOSE 8080

# ─────────────────────────────────────────────────────────────
# 7. Env vars (override as needed)
# ─────────────────────────────────────────────────────────────
ENV LLAMA_API_URL=http://llama-api:8000/generate \
    NEMOGUARDRAILS_LOG_LEVEL=CRITICAL

# ─────────────────────────────────────────────────────────────
# 8. Run the API
# ─────────────────────────────────────────────────────────────
CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8080", "--log-level", "info"]
